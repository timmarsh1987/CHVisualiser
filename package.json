{
  "name": "epam.promotions.frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "watch": "vite build --watch --mode production",
    "dev": "vite --host --https --cors",
    "comment": "The build does not work without specifying a specific component as a parameter. For a more detailed description, see the comments to task 60604",
    "build": "tsc && vite build",
    "lint": "eslint --ext .ts,.tsx src",
    "localbuild": "tsc && vite build",
    "buildall-development": "npm run lint && node ./src/utils/buildall-development.cjs",
    "buildall-production": "npm run lint && node ./src/utils/buildall-production.cjs",
    "extension:watch": "node ./src/extensions.js --watch",
    "extension:build": "tsc && node ./src/extensions.js",
    "extension:start": "tsc && node ./src/extensions.js"
  },
  "dependencies": {
    "@chili-publish/publisher-interface": "^0.4.0",
    "@emotion/css": "^11.10.6",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.11.13",
    "@mui/x-date-pickers-pro": "^6.4.0",
    "@sitecore/sc-contenthub-webclient-sdk": "^1.2.8",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "dompurify": "^3.0.9",
    "fast-glob": "^3.2.12",
    "node-fetch": "^2.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "@vitejs/plugin-react": "^3.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "sass": "^1.59.3",
    "typescript": "^4.9.3",
    "vite": "^4.2.1",
    "vite-plugin-css-injected-by-js": "^3.1.0",
    "vite-plugin-material-ui": "^1.0.1"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onCommand:extension.renderComponent",
    "onCommand:extension.configureAPI"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.renderComponent",
        "title": "Render React Component"
      },
      {
        "command": "extension.configureAPI",
        "title": "Configure Content Hub API"
      }
    ]
  }
}
